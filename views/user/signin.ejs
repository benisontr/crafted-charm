  }

  .input-wrapper input::placeholder {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.9rem;
  }

  .input-error-message {
    color: var(--error-color);
    font-size: 0.8rem;
    margin-top: 4px;
    display: block;
    text-align: left;
    padding-left: 5px;
  }

  .toggle-eye {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    color: rgba(255, 255, 255, 0.5);
    transition: color 0.3s ease;
    font-size: 1rem;
    height: 18px;
    width: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .toggle-eye:hover {
    color: var(--gold-accent);
  }

  .login-btn {
    width: 100%;
    padding: 12px;
    background: linear-gradient(135deg, var(--earthy-brown), var(--crystal-purple));
    color: white;
    font-size: 0.95rem;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 8px;
    margin-bottom: 1.2rem;
    height: 42px;
  }

  .login-btn:hover {
    background: linear-gradient(135deg, var(--crystal-purple), var(--earthy-brown));
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(106, 76, 147, 0.4);
  }

  .forgot-password-wrapper {
    text-align: right;
    margin-bottom: 1.2rem;
  }

  .forgot-password-link {
    color: var(--text-light);
    text-decoration: none;
    font-size: 0.85rem;
    transition: all 0.3s ease;
    opacity: 0.8;
  }

  .forgot-password-link:hover {
    color: var(--gold-accent);
    text-decoration: underline;
    opacity: 1;
  }

  .register-text {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    margin-top: 1.2rem;
  }

  .register-link {
    color: var(--gold-accent);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .register-link:hover {
    color: var(--crystal-purple);
  }

  .alert {
    padding: 10px 12px;
    border-radius: 6px;
    margin-bottom: 1.2rem;
    font-size: 0.85rem;
  }

  .alert-success {
    background-color: rgba(40, 167, 69, 0.2);
    border: 1px solid rgba(40, 167, 69, 0.3);
    color: #d4edda;
  }

  .alert-danger {
    background-color: rgba(220, 53, 69, 0.2);
    border: 1px solid rgba(220, 53, 69, 0.3);
    color: #f8d7da;
  }

  /* Responsive adjustments */
  @media (max-width: 576px) {
    .login-form-box {
