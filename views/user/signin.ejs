    }
    
    .welcome-heading {
      font-size: 1.7rem;
    }
    
    .welcome-subtext {
      font-size: 0.9rem;
    }
    
    .input-wrapper input {
      height: 36px;
      padding: 7px 12px;
    }
    
    .login-btn {
      padding: 11px;
      height: 40px;
    }
  }
</style>

