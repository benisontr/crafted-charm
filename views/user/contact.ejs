<%- include('./partials/header') %>
<%- include('./partials/userHeader') %>

<div class="main-wrapper">
  <!-- Contact Area -->
  <section class="contact-page-area section-gap">
    <div class="container">
      <div class="contact-page-container row">

        <!-- Left: Contact Info -->
        <div class="col-lg-5">
          <div class="contact-info-card">
            <div class="contact-header">
              <h2 class="section-title">Contact Information</h2>
              <p class="section-intro">Fill out the form or reach out directly through the channels below</p>
            </div>

            <div class="contact-block">
              <div class="contact-icon">
                <i class="fas fa-map-marker-alt"></i>
              </div>
              <div class="contact-content">
                <h4>Our Location</h4>
                <p>Crafted Charms, Hubli<br>Karnataka – 580020, India</p>
              </div>
            </div>

            <div class="contact-block">
              <div class="contact-icon">
                <i class="fas fa-phone"></i>
              </div>
              <div class="contact-content">
                <h4>Phone Number</h4>
                <p>+91 8217719225</p>
              </div>
            </div>

            <div class="contact-block">
              <div class="contact-icon">
                <i class="fas fa-envelope"></i>
              </div>
              <div class="contact-content">
                <h4>Email Address</h4>
                <p>craftedcharm.luck@gmail.com</p>
              </div>
            </div>

            <div class="contact-block">
              <div class="contact-icon">
                <i class="fas fa-clock"></i>
              </div>
              <div class="contact-content">
                <h4>Working Hours</h4>
                <p>Monday - Saturday: 10:00 AM – 7:00 PM<br>
                Sunday: Closed</p>
              </div>
            </div>

            <!-- <div class="social-links">
              <h4>Follow Us</h4>
              <div class="social-icons">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-pinterest-p"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
              </div>
            </div> -->
          </div>
        </div>

        <!-- Right: Contact Form -->
        <div class="col-lg-7">
          <div class="contact-form-card">
            <div class="form-header">
              <h2 class="section-title">Send Us a Message</h2>
              <p class="form-subtitle">We'll get back to you within 24 hours</p>
            </div>
            

            <!-- SUCCESS / ERROR MESSAGES START -->
            <% if (typeof success !== 'undefined') { %>
              <div class="alert alert-success" style="margin-bottom: 20px; color: green; font-weight: 500;">
                ✅ Message sent successfully!
              </div>
            <% } %>

            <% if (typeof error !== 'undefined') { %>
              <div class="alert alert-danger" style="margin-bottom: 20px; color: red; font-weight: 500;">
                ❌ Something went wrong. Please try again.
              </div>
            <% } %>
            <!-- SUCCESS / ERROR MESSAGES END -->
            <form id="contactForm" action="/contact" method="POST" class="elegant-form">
              <div class="form-row">
                <div class="form-group half-width">
                  <label for="name">Full Name *</label>
                  <div class="input-with-icon">
                    <i class="fas fa-user"></i>
                    <input type="text" id="name" name="name" placeholder="Your Name" required>
                  </div>
                </div>
                <div class="form-group half-width">
                  <label for="email">Email Address *</label>
                  <div class="input-with-icon">
                    <i class="fas fa-envelope"></i>
                    <input type="email" id="email" name="email" placeholder="Your Email" required>
                  </div>
                </div>
              </div>
              
              <div class="form-group">
                <label for="subject">Subject</label>
                <div class="input-with-icon">
                  <i class="fas fa-tag"></i>
                  <input type="text" id="subject" name="subject" placeholder="Subject of your message">
                </div>
              </div>
              
              <div class="form-group">
                <label for="message">Your Message *</label>
                <div class="textarea-with-icon">
                  <i class="fas fa-comment"></i>
                  <textarea id="message" name="message" rows="6" placeholder="Write your message here..." required></textarea>
                </div>
              </div>
              
              <div class="form-footer">
                <button type="submit" class="btn-submit">
                  <span>Send Message</span>
                  <i class="fas fa-paper-plane"></i>
                </button>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </section>
</div>

<%- include('./partials/footer') %>

<style>
@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap');
@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');

:root {
  --primary-color: #8B5A2B; /* Rich brown */
  --secondary-color: #B22222; /* Firebrick red */
  --accent-color: #D4AF37; /* Gold */
  --light-gold: #F5E8C7;
  --bg-light: #F9F6F2;
  --text-dark: #333333;
  --text-medium: #555555;
  --text-light: #777777;
  --border-color: #E0D6C9;
  --shadow-sm: 0 2px 10px rgba(0, 0, 0, 0.05);
  --shadow-md: 0 5px 15px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 25px rgba(0, 0, 0, 0.15);
  --transition: all 0.3s ease;
}

body {
  font-family: 'Poppins', sans-serif;
  background-color: var(--bg-light);
  color: var(--text-dark);
  line-height: 1.6;
}

.section-gap {
  padding: 100px 0;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Contact Container */
.contact-page-container {
  display: flex;
  flex-wrap: wrap;
  gap: 30px;
  align-items: stretch;
}

.col-lg-5, .col-lg-7 {
  flex: 1 1 0;
}

/* Contact Info Card */
.contact-info-card {
  background: #fff;
  padding: 50px 40px;
  border-radius: 12px;
  box-shadow: var(--shadow-md);
  height: 100%;
  position: relative;
  overflow: hidden;
  border: 1px solid var(--border-color);
}

.contact-info-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 4px;
  height: 100%;
  background: linear-gradient(to bottom, var(--primary-color), var(--accent-color));
}

.contact-header {
  margin-bottom: 40px;
}

.section-title {
  font-family: 'Playfair Display', serif;
  font-size: 2.2rem;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 10px;
  position: relative;
}

.section-intro {
  color: var(--text-medium);
  font-size: 0.95rem;
}

.contact-block {
  display: flex;
  margin-bottom: 25px;
  align-items: flex-start;
}

.contact-icon {
  width: 50px;
  height: 50px;
  background-color: rgba(212, 175, 55, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15px;
  flex-shrink: 0;
  color: var(--accent-color);
  font-size: 1.1rem;
}

.contact-content h4 {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 5px;
}

.contact-content p {
  color: var(--text-medium);
  font-size: 0.95rem;
  margin: 0;
}

.social-links {
  margin-top: 50px;
}

.social-links h4 {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 15px;
}

.social-icons {
  display: flex;
  gap: 15px;
}

.social-icons a {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: rgba(139, 90, 43, 0.1);
  color: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition);
}

.social-icons a:hover {
  background-color: var(--primary-color);
  color: white;
  transform: translateY(-3px);
}

/* Contact Form Card */
.contact-form-card {
  background: #fff;
  padding: 50px;
  border-radius: 12px;
  box-shadow: var(--shadow-md);
  height: 100%;
  border: 1px solid var(--border-color);
}

.form-header {
  margin-bottom: 40px;
}

.form-subtitle {
  color: var(--text-medium);
  font-size: 0.95rem;
}

.elegant-form .form-row {
  display: flex;
  gap: 20px;
  margin-bottom: 20px;
}

.elegant-form .half-width {
  flex: 1;
}

.elegant-form .form-group {
  margin-bottom: 20px;
}

.elegant-form label {
  display: block;
  font-weight: 500;
  margin-bottom: 8px;
  color: var(--primary-color);
  font-size: 0.95rem;
}

.elegant-form label::after {
  content: '*';
  color: var(--secondary-color);
  margin-left: 4px;
  display: none;
}

.elegant-form label[for="subject"]::after,
.elegant-form label[for="phone"]::after {
  display: none;
}

.input-with-icon, .textarea-with-icon {
  position: relative;
}

.input-with-icon i, .textarea-with-icon i {
  position: absolute;
  left: 15px;
  top: 50%;
  transform: translateY(-50%);
  color: var(--accent-color);
  font-size: 1rem;
}

.textarea-with-icon i {
  top: 20px;
  transform: none;
}

.elegant-form input, .elegant-form textarea {
  width: 100%;
  padding: 12px 15px 12px 45px;
  border: 1px solid var(--border-color);
  border-radius: 8px;
  font-size: 0.95rem;
  background-color: #fff;
  transition: var(--transition);
  color: var(--text-dark);
}

.elegant-form textarea {
  padding: 15px 15px 15px 45px;
  min-height: 150px;
  resize: vertical;
}

.elegant-form input:focus, .elegant-form textarea:focus {
  border-color: var(--accent-color);
  box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.2);
  outline: none;
}

.elegant-form input::placeholder, .elegant-form textarea::placeholder {
  color: #aaa;
  font-weight: 300;
}

.form-footer {
  margin-top: 30px;
}

.btn-submit {
  background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
  color: white;
  padding: 14px 30px;
  border: none;
  border-radius: 8px;
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition);
  display: inline-flex;
  align-items: center;
  gap: 10px;
  box-shadow: 0 4px 15px rgba(139, 90, 43, 0.3);
  position: relative;
  overflow: hidden;
}

.btn-submit::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, var(--secondary-color), var(--primary-color));
  transition: var(--transition);
  z-index: 1;
}

.btn-submit:hover::before {
  left: 0;
}

.btn-submit span, .btn-submit i {
  position: relative;
  z-index: 2;
}

.btn-submit:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 20px rgba(139, 90, 43, 0.4);
}

/* Responsive Design */
@media (max-width: 992px) {
  .col-lg-5, .col-lg-7 {
    flex: 1 1 100%;
  }
  
  .contact-page-container {
    gap: 40px;
  }
  
  .contact-info-card, .contact-form-card {
    padding: 40px 30px;
  }
}

@media (max-width: 768px) {
  .section-gap {
    padding: 70px 0;
  }
  
  .elegant-form .form-row {
    flex-direction: column;
    gap: 0;
  }
  
  .contact-info-card::before {
    width: 100%;
    height: 4px;
  top: 0;
    left: 0;
  }
}

@media (max-width: 576px) {
  .contact-info-card, .contact-form-card {
    padding: 30px 20px;
  }
  
  .section-title {
    font-size: 1.8rem;
  }
}
</style>