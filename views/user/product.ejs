  opacity: 1;
}

  .btn-buy-now {
    background-color: #ff6b6b;
    color: #fff;
  }

  .btn-buy-now:hover {
    background-color: #e05555;
  }

  .btn-add-to-cart {
    background-color: #5f6caf;
    color: #fff;
  }

  .btn-add-to-cart:hover {
