<%- include('./partials/header') %>
<%- include('./partials/loginheader') %>
  
<div class="signup-container">
    <div class="signup-form-box">
      <div class="logo">
        <a href="/" class="logo logo-dark d-inline-block">
          <img src="assets/images/logo/logo-cc-login.png" alt="Crafted Charm Logo" style="height: 100px; width: auto;"/>
        </a>
        <p class="tagline">Forgot your password? We'll help you reset it and restore your crystal connection.</p>
      </div>

      <form action="/forgot-password" method="POST">
        <div class="input-wrapper">
          <input type="email" placeholder="Enter your email address" required name="email" class="form-input"/>
        </div>

        <% if (message) { %>
          <div class="alert alert-<%= messageType === 'success' ? 'success' : 'danger' %>" role="alert">
            <%= message %>
          </div>
        <% } %>

        <button type="submit" class="submit-btn">Send Reset Link</button>
      </form>

      <p class="login-text">
        Remember your password? <a href="/signin" class="login-link">Back to Login</a>
      </p>
    </div>
  </div>

<style>
  :root {
    --crystal-purple: #6a4c93;
    --gold-accent: #d4af37;
    --earthy-brown: #8b5a2b;
    --deep-teal: #1a7f7f;
    --text-light: #f8f9fa;
    --text-dark: #212529;
    --bg-dark: #1a1a1a;
    --bg-light: #2d2d2d;
    --success-color: #28a745;
    --error-color: #dc3545;
  }

  body, html {
    margin: 0;
    padding: 0;
    font-family: 'Poppins', sans-serif;
    color: var(--text-light);
  }

  .signup-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  padding: 20px;
  background: linear-gradient(135deg, #fefaf6, #f3f0e8);
  }

  .navbar {
    padding: 1.5rem 2rem;
    background-color: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(5px);
  }

  .signup-form-box {
    max-width: 500px;
    margin: auto;
    background: rgba(26, 26, 26, 0.9);
    padding: 2.5rem;
    border-radius: 20px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(212, 175, 55, 0.2);
    width: 90%;
    backdrop-filter: blur(5px);
    transition: transform 0.3s ease;
  }

  .signup-form-box:hover {
    transform: translateY(-5px);
  }

  .logo img {
    height: 80px;
    width: auto;
    margin-bottom: 1rem;
    filter: drop-shadow(0 0 5px rgba(212, 175, 55, 0.5));
  }

  .tagline {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
    font-size: 1rem;
    line-height:2.5rem;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .input-wrapper {
    position: relative;
  }

   .input-wrapper input {
    width: 100%;
    height: 100%;
    padding: 14px 15px;
    font-size: 1rem;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background-color: rgba(255, 255, 255, 0.05);
    color: var(--text-light);
    transition: all 0.3s ease;
  }

  .form-input {
    width: 100%;
    height: 50%;
    padding: 10px 15px;
    font-size: 1rem;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background-color: rgba(255, 255, 255, 0.05);
    color: var(--text-light);
    transition: all 0.3s ease;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--gold-accent);
    box-shadow: 0 0 0 2px rgba(212, 175, 55, 0.3);
    background-color: rgba(255, 255, 255, 0.1);
  }

  .form-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .submit-btn {
    padding: 14px;
    background: linear-gradient(135deg, var(--earthy-brown), var(--crystal-purple));
    color: white;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 10px;
  }

  .submit-btn:hover {
    background: linear-gradient(135deg, var(--crystal-purple), var(--earthy-brown));
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(106, 76, 147, 0.4);
  }

  .login-text {
    margin-top: 1.5rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.95rem;
  }

  .login-link {
    color: var(--gold-accent);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .login-link:hover {
    color: var(--crystal-purple);
  }

  .alert {
    padding: 12px;
    border-radius: 8px;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .alert-success {
    background-color: rgba(40, 167, 69, 0.2);
    border: 1px solid rgba(40, 167, 69, 0.3);
    color: #d4edda;
  }

  .alert-danger {
    background-color: rgba(220, 53, 69, 0.2);
    border: 1px solid rgba(220, 53, 69, 0.3);
    color: #f8d7da;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .signup-form-box {
      padding: 2rem 1.5rem;
      width: 85%;
    }
    
    .logo img {
      height: 70px;
    }
    
    .tagline {
      font-size: 0.95rem;
    }
    
    .form-input {
      padding: 12px 15px;
    }
  }

  @media (max-width: 480px) {
    .signup-form-box {
      padding: 1.5rem;
      width: 90%;
    }
    
    .navbar {
      padding: 1rem;
    }
    
    .submit-btn {
      padding: 12px;
    }
  }
</style>

