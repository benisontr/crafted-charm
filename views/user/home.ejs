<%- include('./partials/header') %>
<%- include('./partials/userHeader') %>

<main class="main-wrapper">

  <!-- Hero Slider Section -->
  <%
    const handloomImages = [
    '/assets/images/slider/slider1.jpg',
    '/assets/images/slider/slider2.jpg',
    '/assets/images/slider/slider3.jpg',
    '/assets/images/slider/slider4.jpg'
    ];
  %>

  <section class="hero-slider" id="handloomSlider">
    <div class="hero-overlay"></div>
    <div class="hero-content-container">
      <div class="hero-content">
        <h1 class="hero-title">Awaken Your Energy with <span class="highlighted">Crafted Charm</span></h1>
        <p class="hero-subtitle">Handmade bracelets, rings, and towers — where <strong>beauty meets healing</strong>.</p>
        <a href="/shop" class="btn-cta">
          <i class="fas fa-shopping-cart me-2"></i> Shop Collection
        </a>
      </div>
    </div>
  </section>

  <!-- Categorized Products -->
  <% 
   const categoryMap = {};
  categories.forEach(cat => {
    categoryMap[cat._id.toString()] = cat.name;
  });

  const productsByCategory = {};
  products.forEach(product => {
    const categoryId = product.categoryId?._id?.toString() || product.categoryId?.toString();
    const categoryName = categoryMap[categoryId] || 'Uncategorized';

    if (!productsByCategory[categoryId]) {
      productsByCategory[categoryId] = {
        name: categoryName,
        products: []
      };
    }
    productsByCategory[categoryId].products.push(product);
  });
  %>

  <% Object.keys(productsByCategory).forEach(categoryId => { %>
    <% const category = productsByCategory[categoryId]; %>
    <section class="section category-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title"><%= category.name %></h2>
          <a href="/shop" class="section-link">View All</a>
        </div>
        
        <div class="category-carousel">
          <div class="product-carousel swiper-container" id="carousel-<%= categoryId %>">
            <div class="swiper-wrapper">
              <% category.products.forEach(product => { %>
                <div class="product-card swiper-slide">
                  <% if (product.discountPercentage && product.discountPercentage > 0) { %>
                    <div class="product-badge">
                      <span><%= product.discountPercentage %>% OFF</span>
                    </div>
                  <% } %>
                  <div class="product-image">
                    <a href="/product?id=<%= product._id %>">
                      <img src="<%= product.images[0] %>"  alt="<%= product.name %>" class="primary-img">
                      <% if (product.images[1]) { %>
                        <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="secondary-img">
                      <% } %>
                    </a>
                  </div>
                  <div class="product-details">
                      <h3 class="product-title">
                        <a href="/product?id=<%= product._id %>"><%= product.name %></a>
                      </h3>
                      <div class="product-price">
                        <% if (product.price && product.discount) { %>
                          <span class="old-price">₹<%= product.price %></span>
                        <% } %>
                        <span class="current-price">₹<%= product.discount || product.price %></span>
                      </div>
                    <a href="#" class="add-to-cart-btn" data-id="<%= product._id %>">Add to Cart</a>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% }) %>


<script>
  document.addEventListener("DOMContentLoaded", () => {
    const images = <%- JSON.stringify(handloomImages) %>;
    let currentIndex = 0;
    const heroSection = document.getElementById('handloomSlider');

    function updateBackground() {
      heroSection.style.backgroundImage = `url('${images[currentIndex]}')`;
    }

    setInterval(() => {
      currentIndex = (currentIndex + 1) % images.length;
      updateBackground();
    }, 5000); // Change every 5 seconds

    updateBackground();
  });
</script>

  <!-- Initialize carousels with Swiper JS -->
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Initialize each category carousel with Swiper
      <% Object.keys(productsByCategory).forEach(categoryId => { %>
        new Swiper('#carousel-<%= categoryId %>', {
          slidesPerView: 'auto',
          spaceBetween: 20,
          freeMode: true,
          grabCursor: true,
          mousewheel: {
            forceToAxis: true,
          },
          breakpoints: {
            480: {
              slidesPerView: 'auto',
              spaceBetween: 20
            },
            768: {
              slidesPerView: 'auto',
              spaceBetween: 20
            },
            1024: {
              slidesPerView: 'auto',
              spaceBetween: 20
            }
          },
          navigation: false,
          pagination: false,
          scrollbar: false
        });
      <% }) %>
    });
  </script>

<!-- Script to handle cart -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const addToCartBtns = document.querySelectorAll('.add-to-cart-btn');

    addToCartBtns.forEach(btn => {
      btn.addEventListener('click', async (e) => {
        e.preventDefault();
        const productId = btn.dataset.id;

        try {
          const res = await fetch('/add-to-cart', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId })
          });

          const data = await res.json();

          if (res.ok) {
            // Redirect to cart page after successful add
            window.location.href = '/cart';
          } else {
            alert(data.message || 'Something went wrong.');
          }
        } catch (err) {
          console.error('Error:', err);
          alert('Failed to add to cart.');
        }
      });
    });
  });
</script>


<style>
  :root {
  /* Crystal-inspired Color Palette */
  --amethyst: #9b59b6;       /* Purple - Amethyst */
  --rose-quartz: #f7cac9;    /* Pink - Rose Quartz */
  --citrine: #f39c12;        /* Yellow-Orange - Citrine */
  --aquamarine: #7fdbff;     /* Blue - Aquamarine */
  --clear-quartz: #f5f5f5;   /* White - Clear Quartz */
  --smoky-quartz: #5d6d7e;   /* Gray - Smoky Quartz */
  --malachite: #2ecc71;      /* Green - Malachite */
  --carnelian: #e74c3c;      /* Red-Orange - Carnelian */
  
  /* Theme Variables */
  --primary-color: var(--amethyst);
  --secondary-color: var(--rose-quartz);
  --accent-color: var(--clear-quartz);
  --light-color: var(--clear-quartz);
  --dark-color: #3e2723;
  --text-color: #333;
  --text-light: #777;
  --success-color: var(--malachite);
  --error-color: var(--carnelian);
  --shadow: 0 4px 12px rgba(0, 0, 0, 0.1);
  --transition: all 0.3s ease;
  --border-radius: 8px;
}

@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&family=Montserrat:wght@600;700&display=swap');
@import url('https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css');

/* Base Styles */
.main-wrapper {
  background-color: white;
}

body {
  font-family: 'Poppins', sans-serif;
  color: var(--text-color);
  background-color: #fff;
  line-height: 1.6;
  margin: 0;
  padding: 0;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Playfair Display', serif;
  font-weight: 600;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

/* Hero Section */
.hero-slider {
  position: relative;
  height: 100vh;
  background-size: cover;
  background-position: center;
  transition: background-image 1s ease-in-out;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(10, 10, 10, 0.5);
  z-index: 1;
}

.hero-content-container {
  position: relative;
  z-index: 2;
  max-width: 800px;
  text-align: center;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 1rem;
  color: #fff;
}

.hero-content {
  position: relative;
  z-index: 2;
  color: #fff;
  text-align: center;
  padding: 2rem;
  text-shadow: 1px 1px 10px rgba(0, 0, 0, 0.7);
}

.hero-title {
  font-size: 3rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: #ffffff;
  text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
}

.hero-title .highlighted {
   color: #f7e791;
}

.hero-subtitle {
  font-size: 1.2rem;
  margin: 1rem auto 2rem;
  max-width: 600px;
  color: #f1f1f1;
}

.btn-cta {
  display: inline-block;
  background-color: #fff;
  padding: 0.75rem 1.75rem;
  border-radius: 50px;
  font-weight: 600;
  text-decoration: none;
}

.btn-cta:hover {
  background-color: #d5db84;
  color: #111;
}

.slider-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.8);
  color: var(--dark-color);
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  z-index: 3;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition);
}

.slider-nav:hover {
  background: white;
}

.prev {
  left: 20px;
}

.next {
  right: 20px;
}

/* Section Styles */
.section {
  padding: 60px 0;
}

.category-section {
  padding: 40px 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding: 0 15px;
  flex-wrap: wrap;
  gap: 15px;
}

.section-title {
  font-family: 'Montserrat', sans-serif;
  font-weight: 700;
  font-size: 1.8rem;
  letter-spacing: 1px;
  color: var(--dark-color);
  position: relative;
  display: inline-block;
  margin: 0;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 0;
  width: 50px;
  height: 3px;
  background: var(--primary-color);
}

.section-link {
  color: var(--primary-color);
  text-decoration: none;
  font-weight: 500;
  transition: var(--transition);
  display: inline-block;
  padding: 6px 12px;
  border: 1px solid var(--primary-color);
  border-radius: var(--border-radius);
  font-size: 0.9rem;
}

.section-link:hover {
  color: var(--dark-color);
  text-decoration: none;
  border-color: var(--dark-color);
}

/* Category Carousel */
.category-carousel {
  position: relative;
  padding: 0 15px;
  overflow: hidden;
}

.product-carousel {
  overflow: visible !important;
}

/* Swiper Customizations */
.swiper {
  width: 100%;
  height: 100%;
  padding: 20px 0;
}

.swiper-slide {
  width: 250px !important; /* Fixed width for product cards */
  height: auto;
}

/* Product Card */
.product-card {
  background: white;
  border-radius: var(--border-radius);
  overflow: hidden;
  box-shadow: var(--shadow);
  transition: var(--transition);
  height: 300px; /* Reduced from 350px */
  display: flex;
  flex-direction: column;
  margin: 0;
}

.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(155, 89, 182, 0.2);
}

.product-badge {
  position: absolute;
  top: 15px;
  right: 15px;
  background-color: var(--carnelian);
  color: white;
  padding: 4px 10px;
  border-radius: 4px;
  font-size: 0.8rem;
  font-weight: 500;
  z-index: 2;
}

.product-image {
  position: relative;
  overflow: hidden;
  height: 180px;
  flex-shrink: 0;
}

.product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: var(--transition);
}

.primary-img {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 1;
}

.secondary-img {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

.product-card:hover .primary-img {
  opacity: 0;
}

.product-card:hover .secondary-img {
  opacity: 1;
}

.product-details {
  padding: 10px 15px;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: calc(100% - 180px);
}

.product-title {
  font-size: 1rem;
  margin: 0;
  line-height: 1;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-weight: 500;
  flex-grow: 0;
}

.product-title a {
  color: var(--text-color);
  text-decoration: none;
  transition: var(--transition);
}

.product-title a:hover {
  color: var(--primary-color);
}

.product-price {
  display: flex;
  align-items: center;
  gap: 10px;
  margin: 5px 0;
  padding: 0;
}

.old-price {
  text-decoration: line-through;
  color: var(--text-light);
  font-size: 0.9rem;
}

.current-price {
  color: var(--carnelian);
  font-weight: 600;
  font-size: 1rem;
}

.add-to-cart-btn {
  display: block;
  width: 100%;
  padding: 8px;
  text-align: center;
  background-color: var(--light-color);
  color: var(--text-color);
  border-radius: var(--border-radius);
  text-decoration: none;
  font-weight: 500;
  transition: var(--transition);
  border: none;
  cursor: pointer;
  margin-top: 8px;
  font-size: 0.9rem;
}

.add-to-cart-btn:hover {
  background-color: var(--primary-color);
  color: white;
}

/* Responsive Styles */
@media (max-width: 1200px) {
  .container {
    max-width: 100%;
    padding: 0 20px;
  }
}

@media (max-width: 992px) {
  .hero-title {
    font-size: 2.2rem;
  }
  .hero-subtitle {
    font-size: 1rem;
  }
  .section-title {
    font-size: 1.6rem;
  }
  .product-card {
    height: 280px;
  }
  .product-image {
    height: 160px;
  }
}

@media (max-width: 768px) {
  .hero-slider {
    min-height: 60vh;
  }
  .hero-content {
    max-width: 100%;
    margin: 0 20px;
    padding: 20px;
  }
  .section {
    padding: 40px 0;
  }
  .swiper-slide {
    width: 220px !important;
  }
   .product-card {
    height: 260px; /* Reduced from original */
  }
    .hero-title {
    font-size: 2.2rem;
  }

  .hero-subtitle {
    font-size: 1rem;
  }

  .btn-cta {
    font-size: 0.9rem;
    padding: 0.6rem 1.5rem;
  }
}

@media (max-width: 576px) {
  .hero-slider {
    min-height: 50vh;
  }
  .hero-title {
    font-size: 1.8rem;
  }
  .slider-nav {
    width: 40px;
    height: 40px;
    font-size: 1.2rem;
  }
  .section-title {
    font-size: 1.4rem;
  }
  .product-card {
    height: 240px;
    width: 180px !important;
  }
  .product-image {
    height: 140px;
  }
  .product-details {
    padding: 8px 12pxpx;
  }
  .product-title {
    font-size: 0.9rem;
  }
  .current-price {
    font-size: 0.9rem;
  }
}

/* Swiper Navigation Customization */
.swiper-button-next,
.swiper-button-prev {
  display: none !important; /* Hide default navigation */
}

/* Ensure touch scrolling works */
.swiper-wrapper {
  touch-action: pan-y;
}
</style>

</main>

