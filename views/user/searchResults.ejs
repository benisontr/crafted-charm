<%- include('./partials/header') %>
<%- include('./partials/userHeader') %>

<div class="container my-5">
  <div class="row mb-4">
    <div class="col-12">
      <h2 class="display-6 fw-bold">Search results for "<%= query %>"</h2>
      <p class="text-muted"><%= products.length %> items found</p>
    </div>
  </div>

  <% if (products.length === 0) { %>
    <div class="row">
      <div class="col-12 text-center py-5">
        <img src="/images/no-results.svg" alt="No results" class="img-fluid mb-4" style="max-height: 200px;">
        <h4 class="fw-bold mb-3">No products found</h4>
        <p class="text-muted mb-4">Try different search terms or browse our categories</p>
        <a href="/" class="btn btn-primary px-4">Continue Shopping</a>
      </div>
    </div>
  <% } else { %>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
      <% products.forEach(product => { %>
        <div class="col">
          <div class="card h-100 border-0 shadow-sm rounded-3 overflow-hidden product-card">
            <div class="position-relative">
              <img src="<%= product.images[0] || '/images/placeholder-product.jpg' %>" class="card-img-top product-image" alt="<%= product.name %>">
              <div class="card-img-overlay d-flex justify-content-end align-items-start p-2">
              </div>
            </div>
            <div class="card-body p-3">
              <h5 class="card-title mb-1 fs-6 text-truncate"><%= product.name %></h5>
              <% if (product.description) { %>
                <p class="text-muted small mb-2 text-truncate"><%= product.description %></p>
              <% } %>
              <div class="d-flex justify-content-between align-items-center">
                <p class="card-text fw-bold mb-0 text-primary">₹<%= product.price.toLocaleString() %></p>
                <% if (product.originalPrice && product.originalPrice > product.price) { %>
                  <p class="text-muted small mb-0 text-decoration-line-through">₹<%= product.originalPrice.toLocaleString() %></p>
                <% } %>
              </div>
              <% if (product.rating) { %>
                <div class="mt-2">
                  <div class="star-rating small" style="--rating: <%= product.rating %>;">
                    ★★★★★
                  </div>
                  <span class="small text-muted ms-1">(<%= product.reviewCount || 0 %>)</span>
                </div>
              <% } %>
            </div>
            <div class="card-footer bg-transparent border-0 p-3 pt-0">
              <a href="/product?id=<%= product._id %>" class="btn btn-outline-primary w-100 btn-sm">View Details</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

<style>
  .product-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }
  
  .product-image {
    height: 200px;
    object-fit: contain;
    background-color: #f8f9fa;
    padding: 20px;
  }
  
  .star-rating {
    --percent: calc(var(--rating) / 5 * 100%);
    display: inline-block;
    font-size: 1em;
    line-height: 1;
    position: relative;
  }
  
  .star-rating::before {
    content: '★★★★★';
    letter-spacing: 2px;
    background: linear-gradient(90deg, #ffc107 var(--percent), #ddd var(--percent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .wishlist-btn {
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .product-card:hover .wishlist-btn {
    opacity: 1;
  }
  
  @media (max-width: 576px) {
    .product-image {
      height: 150px;
    }
  }
</style>

<%- include('./partials/footer') %>