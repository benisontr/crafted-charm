.product-info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 0.8rem 1.5rem;
  margin-bottom: 1.5rem;
}

.product-info-grid h5 {
  font-size: 1rem;
  margin: 0;
  color: #374151;
  font-weight: 500;
}

/* Description Section */
.card-body h4 {
  font-size: 1.2rem;
  font-weight: 600;
  margin-top: 1.5rem;
  color: #111827;
}

.card-body p.text-muted {
  font-size: 1rem;
  color: #4b5563;
  line-height: 1.6;
  margin-top: 0.5rem;
}

